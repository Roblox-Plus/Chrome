{
  "manifest_version": 3,
  "version": "3.0.0",

  "name": "Roblox+",
  "description": "Extends the features available on roblox.com",
  "icons": {
    "16": "./images/icon.png",
    "32": "./images/icon.png",
    "48": "./images/icon.png",
    "128": "./images/icon.png"
  },

  "author": "WebGL3D",

  "minimum_chrome_version": "100.0.0",

  "incognito": "split",

  "background": {
    "service_worker": "./dist/service-worker.js"
  },

  "content_scripts": [
    {
      "css": ["./dist/css/game-details.css"],
      "js": ["./dist/pages/game-details.js"],
      "matches": ["https://*.roblox.com/games/*/*"],
      "run_at": "document_end"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["*.js.map"],
      "matches": ["https://*.roblox.com/*"]
    }
  ],

  "host_permissions": [
    "https://*.roblox.com/*",
    "https://*.roblox.plus/*",
    "https://*.rbxcdn.com/*"
  ],

  "permissions": [
    "contextMenus",
    "notifications",
    "tts",
    "https://*.roblox.com/*",
    "https://*.roblox.plus/*",
    "https://*.rbxcdn.com/*"
  ]
}
